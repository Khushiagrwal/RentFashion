<% layout('layouts/boilerplate') %>
<%- include('../partials/navbar') %>
<br><br>
<div>
    <form action="/products/<%=foundProduct._id%>?_method=patch" class="max-auto" method="post">
        <label for="name"> Name:</label>
            <input type="text" name="name" placeholder="Name of the product" value="<%=foundProduct.name%>">
<br>
        <label for="image"> Image:</label>
            <input type="text" name="image" placeholder="Upload image of the product" value="<%=foundProduct.image%>">
        <br>
        <label for="price"> Price:</label>
            <input type="text" name="price" placeholder="Price of the product" value="<%=foundProduct.price%>"> 
        <br>
        <label for="Description">Desc:</label>
            <textarea name="desc" id=""  rows="4"></textarea placeholder="Description of the product" value="<%=foundProduct.desc%>">
                <br>
        <button>Edit Product</button>
    </form>
</div>
</body>